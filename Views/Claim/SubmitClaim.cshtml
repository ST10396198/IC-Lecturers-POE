@{
    ViewData["Title"] = "Submit Claim";
}

<h1>Submit a Claim</h1>
<form method="post" enctype="multipart/form-data">
    <label for="hoursWorked">Hours Worked:</label>
    <input type="number" id="hoursWorked" name="hoursWorked" required />

    <label for="hourlyRate">Hourly Rate:</label>
    <input type="number" id="hourlyRate" name="hourlyRate" required />

    <label for="notes">Additional Notes:</label>
    <textarea id="notes" name="notes"></textarea>

    <label for="supportingDocument">Upload Supporting Document (PDF, DOCX):</label>
    <input type="file" id="supportingDocument" name="supportingDocument" accept=".pdf,.docx" />

    <button type="submit">Submit Claim</button>
</form>
